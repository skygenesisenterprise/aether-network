{
  "name": "@aether-network/cli",
  "version": "0.1.0",
  "description": "Command Line Interface for Aether Network Administration",
  "type": "module",
  "main": "./dist/main.js",
  "bin": {
    "network": "./dist/main.js"
  },
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "start": "node dist/main.js",
    "cli": "tsx src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"No tests configured yet\" && exit 0",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "aether-network",
    "cli",
    "mail-server",
    "administration",
    "command-line"
  ],
  "author": "Sky Genesis Enterprise",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.4",
    "@types/node": "^25.0.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
